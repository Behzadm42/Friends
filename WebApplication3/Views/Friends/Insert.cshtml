@model FriendViewModel
<div class="container my-5">
    <form method="post" action="Insert">

        <div class="form-group my-3">
            <label asp-for=Name></label>
            <input asp-for=Name class="form-control" placeholder="Name">
        </div>
        <div class="form-group my-3">
            <label asp-for=Number></label>
            <input asp-for=Number class="form-control" placeholder="Number">
        </div>
        <div class="form-group my-3">
            <label for="image1">Image link</label>
            <input type="url" class="form-control" id="image1" name="Image">
            <small>Please only Insert a link from the image on the web</small>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>