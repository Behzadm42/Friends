@model List<FriendViewModel>
@{
    ViewData["Title"] = "List";
}

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">ID</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in @Model)
            {
                <tr onclick="window.location='/Friends/Detail/@item.Id';">
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Number</td>
                    <td>  <img src=@item.Image id="Thumbnail" class="card-img-top" alt=@item.Name+"Image"></td>
                </tr>
            }
        }

    </tbody>
</table>

